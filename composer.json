{
    "name": "hwai-env-lib/hwai-env-lib",
    "description": "A PHP library to manage .env files (PSR-4, MIT)",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmet Asaad Hammoud",
            "email": "a.h.ahmet.es@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "MyEnvLib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MyEnvLib\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php tests",
        "lint": "php -l src/*.php"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}